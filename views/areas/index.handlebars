<h1>Areas</h1>
<div class="row">
  {{#each areas}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-content center-align">
          <h5>{{name}}</h5>
          <p class="story-text">{{description}}</p>
        </div>
      </div>
    </div>
  {{else}}
    <p>Something went wrong and we could not show you any areas.</p>
  {{/each}}
</div>